{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Apartment expense tracking app with receipt scanning",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer && npm run build:server",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --config webpack.config.js",
    "build:server": "tsc -p src/server/tsconfig.json",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p src/main/tsconfig.json -w",
    "dev:renderer": "webpack serve --config webpack.config.js",
    "dev:server": "node dist/server/index.js",
    "start": "electron .",
    "package": "electron-builder"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "@types/pdf-parse": "^1.1.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "better-sqlite3": "^9.6.0",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.6",
    "tesseract.js": "^4.1.4",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.expense-tracker.app",
    "productName": "Expense Tracker",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
